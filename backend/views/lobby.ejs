<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="../css/chat.css" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lobby</title>
    <script src="/scripts/games.js" defer></script>
    <script src="/scripts/lobby.js" defer></script>
    <script src="/scripts/chat.js" defer></script>
</head>
<body>
    <div class="topnav">
        <a class="active" href="/">Home</a>
        <a href="/auth/login">login</a>
        <a href="/auth/signup">Sign up</a>
        <a href="/auth/logout">logout</a>
    </div>
    <div class = grid>
        <div><h1>Global lobby for chat and room creation/joining</h></div>
        <h2><%= user.id %> <%= user.username %></h2>    //email?
        <input type="hidden" name="room-id" id="room-id" value="<%= roomId %>"></input>
        <div>
        <h2>Available Games</h2>
        <section id="game-list">
            <h2>Current Games</h2>
          <section id="my-game-list" data-user="<%= user.id %>">
            <ul>
              <% currentGames.forEach(game => { %>
              <li id="list">
                <a href="/game/<%= game.id %>/join">Join <%= game.id %></a
                >
              </li>
              <% }) %>
            </ul>
          </section>

        </section>
        <form action="/game/create" method="get">
            <button type="submit">Create Game</button>
        </form>
        <h2>Chat</h2>
            <article id = "chat-window"></article>
        </div>
        <div><h1>Global lobby for chat and Game</h></div>
          <h2><%= user.id %> <%= user.username %></h2>    //email?
          <div class="scroll-box">
              <h2>Chat</h2>
              <article id = "chat-window"></article>
          </div>
      <input
          type="text"
          name= "message"
          id="message"
          placeholder= "Message"
          action/>
      </div>

</body>
</html>
