<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <link rel="stylesheet" href="../css/homepage.css" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Homepage</title>
  </head>
  <% if (locals.error) { %>
  <p style="color: red"><%= locals.error %></p>
  <% }%>
  <body>
    <% if (user) { %>
      <div class="logout">
        <a class = "logout" href="/auth/logout">LOGOUT</a>
    </div>
    <div class="play-container">
      <a href="/lobby">
        <button class="playButton">Play</button>
      </a>
    </div>
    <% } else { %>
    <div class="login-container">
      <a href="/auth/login">
        <button class="playButton">Login</button>
      </a>
    </div>
    <div class="register-container">
      <a href="/auth/signup">
        <button class="playButton">Sign Up</button>
      </a>
    </div>
    <% } %>
    <a href="/">
      <img
        class="titleLogo center"
        src="https://cdn2.steamgriddb.com/file/sgdb-cdn/logo_thumb/8a6026f2e24c76678c283322a527f58f.png"
        width="539"
        height="331"
        alt="Title Logo"
      />
    </a>
  </body>
</html>
